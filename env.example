# Forward Networks API Configuration
FORWARD_API_KEY=your-api-key-here
FORWARD_API_SECRET=your-api-secret-here
FORWARD_API_BASE_URL=https://your-forward-instance.com

# Timeout for API requests (in seconds)
FORWARD_TIMEOUT=30

# TLS/SSL Configuration

# Skip TLS certificate verification (useful for self-signed certs or dev environments)
# Options: true, false, 1, 0, yes, no, on, off
FORWARD_INSECURE_SKIP_VERIFY=false

# Custom CA certificate file path (for internal CA or self-signed certs)
# FORWARD_CA_CERT_PATH=/path/to/ca-cert.pem

# Client certificate and key for mutual TLS authentication
# FORWARD_CLIENT_CERT_PATH=/path/to/client-cert.pem
# FORWARD_CLIENT_KEY_PATH=/path/to/client-key.pem

# MCP Server Configuration (optional)
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# MCP Configuration (optional)
MCP_VERSION=v1
MCP_MAX_RETRIES=3 